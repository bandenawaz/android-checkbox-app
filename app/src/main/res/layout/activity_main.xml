<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="220dp"
        android:layout_height="178dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/logo_rest" />

    <CheckBox
        android:id="@+id/checkBoxPizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pizza"
        android:layout_below="@+id/imageViewLogo"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:textSize="35dp"
        android:textStyle="bold"
        />

    <CheckBox
        android:id="@+id/checkBoxBurger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Burger"
        android:layout_below="@+id/checkBoxPizza"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:textSize="35dp"
        android:textStyle="bold"
        />

    <CheckBox
        android:id="@+id/checkBoxCoffee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coffee"
        android:layout_below="@+id/checkBoxBurger"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:textSize="35dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/buttonOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order"
        android:layout_below="@id/checkBoxCoffee"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="35dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:maxLines="10"
        android:layout_below="@id/buttonOrder"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textSize="26dp"/>
</RelativeLayout>